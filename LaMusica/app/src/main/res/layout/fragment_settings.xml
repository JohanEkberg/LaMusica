<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/scanButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/scan_for_music_files"
       android:layout_marginTop="50dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       style="@style/settings_scan_button"/>

   <ProgressBar
       android:id="@+id/busyProgressBar"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_marginBottom="100dp"
       android:indeterminate="true"
       android:indeterminateDrawable="@drawable/progressbar_indeterminate"
       android:indeterminateTint="@color/gray_500"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>