<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaMusica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorSecondaryVariant">@color/gray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>

<!--        <item name="android:popupMenuStyle">@style/LaMusicaPopupMenu</item>-->
        <item name="popupMenuStyle">@style/LaMusicaPopupMenu</item>

        <!-- Color and text appearance option menu -->
<!--        <item name="android:itemBackground">@color/gray_900</item>-->
<!--        <item name="android:popupBackground">@color/gray_900</item>-->
<!--        <item name="android:popupMenuStyle">@style/Theme.LaMusica.PopupMenu</item>-->
        <item name="android:itemTextAppearance">@style/PopupMenuTextAppearance</item>
    </style>

    <style name="Theme.LaMusica.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LaMusica.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaMusica.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LaMusicaPopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu</item>
    </style>

    <style name="PopupMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/option_menu_text_size</item>
    </style>

<!--    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">-->
<!--&lt;!&ndash;        <item name="android:itemBackground">@color/gray_900</item>&ndash;&gt;-->
<!--        <item name="android:textColor">@color/gray_200</item>-->
<!--        <item name="android:textSize">@dimen/option_menu_text_size</item>-->
<!--    </style>-->

    <style name="settings_title">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/settings_title_text_size</item>
    </style>

    <style name="settings_switch">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/settings_switch_text_size</item>
    </style>

    <style name="settings_scan_button" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:layout_marginStart">@dimen/button_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_start_end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_state_gray</item>
    </style>
</resources>